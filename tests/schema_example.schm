!include types.schm

namespace com.itau.checkAccount
	enum StatusPessoa (aprovado, reprovado)

	record Dinheiro "Representa valores monetários"
		Dinheiro MONEY

	record CodigoPessoa "código identificador de uma pessoa cliente do banco."
		CodigoPessoa long

	record CodigoInstituicao "codigo da instituição bancária"
		CodigoInstituicao long

	record PessoaCurto "identifica a pessoa apenas com o nome e código"
		CodigoPessoa CodigoPessoa "código da pessoa cliente do banco"
		NomePessoa text "Nome completo da pessoa cliente do banco. Em algumas situações será nulo"

	record StatusPessoa "qual o status de uma pessoa no banco, "
		Pessoa PessoaCurto not_null
		Status StatusPessoa not_null

	record Conta "informacoes sobre uma conta"
		CodigoInstituicao CodigoInstituicao
		CodigoAgencia long
		CodigoConta long
		DAC long "digito verificador do codico de conta"

	record TEF "representação da transferência eletronica de fundos"
		CodigoTEF long "codigo de identificação único da TEF"
		JWTCliente test null "token JWT enviado pelo dispositivo do cliente"
		Solicitante PessoaCurto "identificação da conta solicitante da TEF"
		CodigoCanal text "identificação do código do canal pelo qual a TEF foi solicitada"
		ContaOrigem Conta "Conta origem da solicitação que será debitada"
		CotaDestino Conta "Conta destino da solicitação que será creditada"
		Valor Dinheiro "Valor sendo transferido"
		LiteralExtrato text(9) null
		Comentario text(256) null "comentário associado à TEF feito pelo cliente da conta origem"
		DataSolicitação timestamp "data e hora que o serviço de TEF recebeu a solicitação"
		DataEfetivacao timestam null "data e hora que a TEF foi efetuada"

	record TEFValidada "indica que o quando a solicitação da TEF está validada"
		TEFValidada TEF
		EhValida boolean
